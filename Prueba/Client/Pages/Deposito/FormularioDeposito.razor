<EditForm Model="depositos" OnValidSubmit="onvalidsubmit">
    <DataAnnotationsValidator/>
    <div class="form-group">
        <label>Codigo estante</label>>
        <div>
            <InputText class="form-control" @bind-Value="@depositos.CodigoEstante"/>
            <ValidationMessage For="@(()=>depositos.CodigoEstante)"/>
        </div>      
    </div>
    <div class="form-group">
        <label>Categoria estante</label>>
          <div>
            <InputText class="form-control" @bind-Value="@depositos.CategoriaEnEstante"/>
            <ValidationMessage For="@(()=>depositos.CategoriaEnEstante)" />
        </div>
    </div>
     <div class="form-group">
        <label>Cantidad estante</label>>
          <div>
            <InputText class="form-control" @bind-Value="@depositos.CantidadEnEstante"/>
            <ValidationMessage For="@(()=>depositos.CantidadEnEstante)" />
        </div>
    </div>
    <br />
     <button class="btn btn-primary" type="submit" >Aceptar</button>
     <button class="btn btn-secondary" @onclick="onCancel">Cancelar</button>
</EditForm>>

@code
{
    
    [Parameter] public Deposito depositos { get; set;}
    
    [Parameter] public EventCallback onvalidsubmit { get; set;}

    [Parameter] public EventCallback onCancel { get; set; }

}
