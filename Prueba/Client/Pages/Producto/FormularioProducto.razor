<EditForm Model="productos" OnValidSubmit="onvalidsubmit">
    <DataAnnotationsValidator/>
    <div class="form-group">
        <label>Nombre producto</label>>
        <div>
            <InputText class="form-control" @bind-Value="@productos.NombreProducto"/>
            <ValidationMessage For="@(()=>productos.NombreProducto)"/>
        </div>      
    </div>
    <div class="form-group">
        <label>Descripcion producto</label>>
          <div>
            <InputText class="form-control" @bind-Value="@productos.DescripcionProducto"/>
            <ValidationMessage For="@(()=>productos.DescripcionProducto)" />
        </div>
    </div>
     <div class="form-group">
        <label>Fecha vencimiento</label>>
          <div>
            <InputText class="form-control" @bind-Value="@productos.FechaVencimiento"/>
            <ValidationMessage For="@(()=>productos.FechaVencimiento)" />
        </div>
    </div>
     <div class="form-group">
        <label>Precio producto</label>>
          <div>
            <InputText class="form-control" @bind-Value="@productos.PrecioProducto"/>
            <ValidationMessage For="@(()=>productos.PrecioProducto)" />
        </div>
    </div>
    <br />
     <button class="btn btn-primary" type="submit" >Aceptar</button>
     <button class="btn btn-secondary" @onclick="onCancel">Cancelar</button>
</EditForm>>


@code 
{
    [Parameter] public Producto productos { get; set;}
    [Parameter] public EventCallback onvalidsubmit { get; set;}
    [Parameter] public EventCallback onCancel { get; set; }
}